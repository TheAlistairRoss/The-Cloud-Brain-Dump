{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "TextBlock",
            "text": "Adaptive Card Response",
            "weight": "bolder",
            "size": "large",
            "id": "acTitle"
        },
		{
            "type": "Container",
            "id": "acFactTable",
            "spacing": "default",
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
						{
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "Assigned To"
                                }
                            ],
                            "width": "stretch"
                        },
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "weight": "Bolder",
                                    "text": "Required Date"
                                }
                            ],
                            "width": "stretch"
                        }
                    ]
                }
            ],
            "bleed": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Team A",
                            "wrap": true,
                            "id": "acCol1"
                        }
                    ],
                    "width": "stretch"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": " Sunday 31st December",
                            "wrap": true,
                            "id": "acCol2"
                        }
                    ],
                    "width": "stretch"
                }
            ],
            "$data": "acDataContext"
        },
		        {
            "type": "TextBlock",
            "text": "Comments",
			"weight" : "bolder",
            "wrap": true,
            "id": "acDescriptionArea"
        },
        {
            "type": "TextBlock",
            "text": "This is my comments",
            "wrap": true,
            "id": "acDescriptionArea"
        }
    ],
    "bleed": true
}